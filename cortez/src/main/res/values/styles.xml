<resources>
    <!-- Base application theme. -->
    <style name="TezosTheme" parent="TezosTheme.Base" />

    <style name="TezosTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TezosTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TezosTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TezosTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TezosTheme.MainActivity" parent="TezosTheme.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>
    <style name="TezosTheme.SettingsActivity" parent="TezosTheme.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>
    <style name="TezosTheme.PasscodeActivity" parent="TezosTheme.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>
    <style name="TezosTheme.AboutActivity" parent="TezosTheme.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>
</resources>
