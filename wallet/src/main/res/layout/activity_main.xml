<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/restoreWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore wallet"
        />

    <Button
        android:id="@+id/createWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create wallet"
        />

    <Button
        android:id="@+id/paymentScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment screen"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="orchard roof outside sustain\n
        depth robot inherit across\n
        coil hospital gravity guilt\n
        feel napkin hire tank\n
        yard mandate theme learn\n
        hollow gravity permit undo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>