<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TezosTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/TezosTheme.PopupOverlay">

            <TextView android:id="@+id/barTitle"
                android:text="@string/app_name"

                android:paddingStart="@dimen/spacing_normal"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_micro"
                android:paddingBottom="@dimen/spacing_micro"
                android:layout_width="wrap_content"
                android:singleLine="true"

                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                tools:ignore="UnusedAttribute,NewApi,RtlSymmetry,PrivateResource" />

            <!--
            <ProgressBar android:id="@+id/progress"
                android:layout_width="@dimen/min_height_touch_target"
                android:layout_height="@dimen/min_height_touch_target"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:visibility="gone"
                android:indeterminateOnly="true" />
            -->

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/restoreWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore wallet"
        />

    <Button
        android:id="@+id/createWalletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create wallet"
        />

    <Button
        android:id="@+id/paymentScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment screen"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="orchard roof outside sustain\n
        depth robot inherit across\n
        coil hospital gravity guilt\n
        feel napkin hire tank\n
        yard mandate theme learn\n
        hollow gravity permit undo"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>