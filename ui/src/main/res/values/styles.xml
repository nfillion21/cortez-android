<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PaymentScreens.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:button">@null</item>
    </style>

    <style name="PaymentScreens.TextAppearance.AmountItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/amount_item_text_size</item>
    </style>

    <style name="PaymentScreens.ScanButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_scan_button</item>
    </style>

    <style name="PaymentScreens.TextAppearance.ErrorSmallItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/error_item_very_small_size</item>
    </style>

    <style name="PaymentScreens.TextAppearance.InfoItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/info_item_text_size</item>
    </style>

    <style name="PaymentScreens.TextAppearance.PaymentProductItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/payment_product_item_text_size</item>
    </style>
</resources>