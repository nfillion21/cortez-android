<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/content"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:ignore="UselessParent,UnusedAttribute">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.tezos.ui.utils.FloatingActionButtonBehavior"
    android:orientation="vertical" >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/PaymentScreens.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:popupTheme="@style/PaymentScreens.PopupOverlay"
            tools:targetApi="lollipop">

            <TextView android:id="@+id/barTitle"
                android:text="@string/add_delegate_title"

                android:paddingStart="@dimen/spacing_normal"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_micro"
                android:paddingBottom="@dimen/spacing_micro"
                android:layout_width="wrap_content"
                android:singleLine="true"

                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                tools:ignore="UnusedAttribute,NewApi,RtlSymmetry,PrivateResource" />

            <ImageButton android:id="@+id/close_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:contentDescription="@string/content_description"
                android:padding="@dimen/spacing_double"
                android:gravity="end"
                android:src="@drawable/close_black_24"
                android:background="@drawable/selector_subtle"
                android:layout_gravity="end|center_vertical"
                />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/spacing_double"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/pkh_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pkh_empty_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/delegate_title_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/PaymentScreens.TextAppearance.Title"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:text="@string/delegate_title"/>

                    <TextView
                        android:id="@+id/pkh_info_empty_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                        android:text="@string/delegate_address_info"
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="@dimen/spacing_double"
                        android:ellipsize="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_double"
                    android:background="@drawable/selector_rect_layout">

                    <TextView
                        android:id="@+id/address_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_delegate"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/PaymentScreens.TextAppearance.WordItem"
                        tools:ignore="UnusedAttribute,NewApi" />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tezos_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_pkh_placeholder"
                        android:drawableRight="@drawable/account_wallet_24"
                        android:drawableEnd="@drawable/account_wallet_24"
                        android:drawablePadding="@dimen/spacing_double"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                        android:maxLength="36"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="@color/tz_placeholder"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:textSize="@dimen/size_edit_text" />

                    <TextView
                        android:id="@+id/amount_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_double"
                        android:text="@string/amount"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                        tools:ignore="UnusedAttribute,NewApi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/amount_transfer"
                            android:elevation="@dimen/elevation_header"
                            android:text="ꜩ"
                            android:layout_marginEnd="@dimen/spacing_normal"
                            android:textAppearance="@style/PaymentScreens.TextAppearance.WordItem"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:clipToPadding="false"
                            tools:ignore="UnusedAttribute,NewApi" />
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/amount_transfer"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:minWidth="@dimen/spacing_huge"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:hint="@string/amount_default"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/tz_placeholder"
                            android:maxLength="15"
                            android:digits="0123456789."
                            android:textSize="@dimen/size_edit_text" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/gas_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_double"
                        android:text="@string/gas"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                        tools:ignore="UnusedAttribute,NewApi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/gas_transfer"
                            android:elevation="@dimen/elevation_header"
                            android:text="ꜩ"
                            android:layout_marginEnd="@dimen/spacing_normal"
                            android:textAppearance="@style/PaymentScreens.TextAppearance.WordItem"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:clipToPadding="false"
                            tools:ignore="UnusedAttribute,NewApi" />
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/gas_transfer"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:minWidth="@dimen/spacing_huge"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:text="@string/amount_default"
                            android:enabled="false"
                            android:inputType="numberDecimal"
                            android:textColorHint="@color/tz_placeholder"
                            android:maxLength="15"
                            android:digits="0123456789."
                            android:textSize="@dimen/size_edit_text" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fee_textview"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/elevation_header"
                        android:layout_marginTop="@dimen/spacing_double"
                        android:text="@string/fee"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:clipToPadding="false"
                        tools:ignore="UnusedAttribute,NewApi" />
                    <!--
                    style="@style/PaymentScreens.TextAppearance.InfoItem"
                    -->
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/fee_spinner"
                        android:prompt="@string/fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/spacing_double"
        android:layout_marginRight="@dimen/spacing_double"
        android:layout_marginLeft="@dimen/spacing_double"
        android:layout_height="?android:attr/actionBarSize">

        <FrameLayout
            android:id="@+id/add_delegate_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/PaymentScreens.Button"
            android:enabled="false"
            android:layout_centerInParent="true"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/add_delegate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_an_address"

                android:drawableLeft="@drawable/ic_lock_black"
                android:drawableStart="@drawable/ic_lock_black"
                android:drawableTint="@color/tz_light"
                android:drawablePadding="@dimen/spacing_normal"
                android:textAppearance="@style/PaymentScreens.TextAppearance.AmountItem"
                android:layout_gravity="center"
                android:enabled="false"

                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                />

        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
</android.support.design.widget.CoordinatorLayout>
