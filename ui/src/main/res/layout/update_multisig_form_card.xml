<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linear_rect_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_double"
        android:background="@drawable/selector_rect_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/threshold_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/threshold_from"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                tools:ignore="UnusedAttribute,NewApi" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/threshold_edittext"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/min_height_touch_target"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:gravity="center_horizontal"
                android:imeOptions="actionDone"
                android:hint="@string/threshold_default"
                android:inputType="numberDecimal"
                android:textColorHint="@color/tz_placeholder"
                android:maxLength="2"
                android:digits="0123456789"
                android:textSize="@dimen/size_edit_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/threshold_info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/threshold_info"
            android:layout_marginTop="@dimen/spacing_normal"
            android:textAppearance="@style/PaymentScreens.TextAppearance.InfoItem"
            tools:ignore="UnusedAttribute,NewApi" />

        <LinearLayout
            android:id="@+id/notary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/notary"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/spacing_normal"
            android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
            tools:ignore="UnusedAttribute,NewApi" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/notary_tz1_edittext"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/spacing_huge"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:hint="@string/one"
                android:enabled="true"
                android:inputType="numberDecimal"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:longClickable="false"
                android:focusable="false"
                android:textColorHint="@color/tz_placeholder"
                android:textSize="@dimen/standard_item_text_size" />

        </LinearLayout>

        <include
            layout="@layout/multisig_form_card_info_signatories"
            />

        <TextView
            android:id="@+id/gas_multisig_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_double"
            android:text="@string/fee_minimum"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
            tools:ignore="UnusedAttribute,NewApi" />

        <LinearLayout
            android:id="@+id/gas_multisig_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation_header"
                android:text="@string/tez"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:textAppearance="@style/PaymentScreens.TextAppearance.WordItem"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:clipToPadding="false"
                tools:ignore="UnusedAttribute,NewApi" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fee_limit_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minWidth="@dimen/spacing_huge"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:hint="@string/neutral"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:textColorHint="@color/tz_placeholder"
                android:maxLength="15"
                android:digits="0123456789."
                android:textSize="@dimen/size_edit_text" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_multisig_storage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/linear_rect_layout"
        app:layout_anchorGravity="bottom|end"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_edit_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_undo_multisig_storage"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/linear_rect_layout"
        app:layout_anchorGravity="bottom|end"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_undo_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
