<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/spacing_double"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addresses_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_nano"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        android:transitionGroup="false"
        android:visibility="visible"
        app:spanCount="2" tools:ignore="UnusedAttribute" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_nested_scrollview">

        <LinearLayout
            android:id="@+id/pkh_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_double"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addresses_empty_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/PaymentScreens.TextAppearance.Title"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:text="@string/address_book_empty_title"/>

            <TextView
                android:id="@+id/addresses_empty_info_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                android:text="@string/address_book_empty_info_title"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delegates_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/delegates_empty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/delegates_info_empty_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/PaymentScreens.TextAppearance.Title"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    android:text="@string/account_info_empty_title"/>

                <TextView
                    android:id="@+id/delegates_info_empty_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                    android:text="@string/create_restore_wallet_delegate_info"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="@dimen/spacing_double"
                    android:ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/delegates_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/delegated_addresses_empty_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/PaymentScreens.TextAppearance.Title"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    android:text="@string/delegated_addresses_empty_title"/>

                <TextView
                    android:id="@+id/delegated_addresses_empty_info_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/PaymentScreens.TextAppearance.StandardItem"
                    android:text="@string/delegated_addresses_empty_info_title"/>

                <Button
                    android:id="@+id/address_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

