<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.tezos.ui.activity.PasscodeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/TezosTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            app:popupTheme="@style/TezosTheme.PopupOverlay">

            <TextView android:id="@+id/barTitle"
                android:text="@string/title_passcode"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                tools:ignore="UnusedAttribute,NewApi,RtlSymmetry,PrivateResource" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/code1_inputlayout"
            android:layout_width="@dimen/min_height_touch_target"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:clipToPadding="false"
            android:transitionGroup="true"
            tools:ignore="UnusedAttribute,NewApi">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/code1_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:gravity="center"
                android:digits="0123456789"
                android:textColorHint="@color/red"
                android:maxLength="2"
                android:textSize="@dimen/huge_text_size" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/code2_inputlayout"
            android:layout_width="@dimen/min_height_touch_target"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:clipToPadding="false"
            android:transitionGroup="true"
            tools:ignore="UnusedAttribute,NewApi">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/code2_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:textColorHint="@color/red"
                android:maxLength="2"
                android:textSize="@dimen/huge_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/code3_inputlayout"
            android:layout_width="@dimen/min_height_touch_target"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:clipToPadding="false"
            android:transitionGroup="true"
            tools:ignore="UnusedAttribute,NewApi">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/code3_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:textColorHint="@color/red"
                android:maxLength="2"
                android:textSize="@dimen/huge_text_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/code4_inputlayout"
            android:layout_width="@dimen/min_height_touch_target"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:clipToPadding="false"
            android:transitionGroup="true"
            tools:ignore="UnusedAttribute,NewApi">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/code4_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:digits="0123456789"
                android:textColorHint="@color/red"
                android:maxLength="2"
                android:textSize="@dimen/huge_text_size" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/error_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/tz_error"
        android:layout_marginStart="@dimen/spacing_double"
        android:layout_marginLeft="@dimen/spacing_double"
        android:layout_marginRight="@dimen/spacing_double"
        android:layout_marginEnd="@dimen/spacing_double"
        android:layout_marginTop="@dimen/spacing_double"
        />

    <TextView
        android:id="@+id/info_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_margin="@dimen/spacing_double"
        />

</LinearLayout>
