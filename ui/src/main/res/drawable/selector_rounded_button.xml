<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <stroke android:width="@dimen/spacing_nano" android:color="@color/colorAccent" />
            <solid android:color="@color/tz_light"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <solid android:color="@color/tz_light"/>
            <stroke android:width="@dimen/spacing_nano" android:color="@color/colorAccent" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="13dip" />
            <stroke android:width="@dimen/spacing_one" android:color="@color/dark_grey" />
            <solid android:color="@color/tz_light"/>
        </shape>
    </item>
</selector>

